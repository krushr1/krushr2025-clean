{
  "name": "krushr-api",
  "version": "1.0.0",
  "description": "Modern Node.js + TypeScript API for Krushr project management platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/test/**/*.test.ts",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:setup": "node scripts/test-db-setup.js",
    "test:cleanup": "rm -f test.db test.db-journal test.db-wal test.db-shm",
    "test:full": "npm run test:cleanup && npm run test:setup && npm run test:run",
    "test:ci": "npm run test:cleanup && npm run test:setup && npm run test:coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^7.7.3",
    "@fastify/redis": "^6.1.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^7.6.1",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^7.2.0",
    "@google/genai": "^1.9.0",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^5.20.0",
    "@trpc/server": "^11.4.2",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.1.2",
    "dotenv": "^16.5.0",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "nanoid": "^5.0.7",
    "sharp": "^0.34.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.13.0",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "typescript",
    "fastify",
    "trpc",
    "prisma",
    "websockets",
    "project-management"
  ],
  "author": "Krushr Team",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
