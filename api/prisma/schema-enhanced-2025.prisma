  url          String
  mimeType     String
  size         Int
  compressed   Boolean  @default(false)
  noteId       String
  uploadedAt   DateTime @default(now())
  thumbnailUrl String?
  note         Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)

