{
  "buildCommand": "npm install --prefix frontend && npm install --prefix api && npm run build --prefix frontend",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.23"
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/(.*)",
      "destination": "/api/trpc/[trpc]"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 